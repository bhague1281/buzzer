<div ng-app="webbuzz" class="col-sm-4 col-sm-offset-4">
  <form ng-controller="buzzform" class="form" method="POST" ng-submit="doBuzz()">
    <h3>Buzzer Web Form</h3>
    <div class="form-group">
      <input type="text" ng-model="user" placeholder="Enter your name" class="form-control">
    </div>
    <div class="form-group">
      <select ng-model="score" class="form-control">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option selected="selected">5</option>
      </select>
    </div>
    <input type="submit" class="btn btn-primary">
  </form>
</div>